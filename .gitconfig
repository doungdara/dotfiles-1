[user]
  name = Jason Webster
  email = jason@metalabdesign.com

[github]
  user = jasonwebster
  token = TOKEN

[core]
  excludesfile = ~/.gitignore_global
  attributesfile = ~/.gitattributes_global

[branch]
  autosetuprebase = always

[push]
	default = simple

[alias]
  br = branch
  ci = commit
  co = checkout
  df = diff
  pp = !"git pull && git push"
  st = status
  whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
  prune-locals = !git branch --merged | grep -v \"\\*\" | xargs -n 1 git branch -d

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[merge]
  log = true

[rerere]
  enabled = 1

[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
  insteadOf = "github:"

[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
  insteadOf = "gist:"

[url "git@heroku.com:"]
  insteadOf = "heroku:"

[diff "exif"]
  textconv = exiftool
